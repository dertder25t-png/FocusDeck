{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Hangfire": "Information"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "http://localhost:5000",
      "http://localhost:3000",
      "focusdeck-desktop://app",
      "focusdeck-mobile://app",
      "tauri://localhost",
      "https://tauri.localhost",
      "capacitor://localhost",
      "ionic://localhost"
    ]
  },
  "Jwt": {
    "Key": "your-256-bit-secret-key-here-min-32-chars",
    "_WARNING_": "NEVER commit real JWT keys to version control!",
    "_SECURITY_": "Use environment variables or secure vaults (Azure Key Vault, AWS Secrets Manager)",
    "_EXAMPLE_ENV_": "Set JWT__Key environment variable instead of hardcoding",
    "_KEY_REQUIREMENTS_": "Minimum 32 characters (256 bits). Use cryptographically secure random generator",
    "_KEY_ROTATION_": "Rotate keys regularly. Support multiple valid keys during transition period",
    "Issuer": "https://your-domain.com",
    "Audience": "focusdeck-clients",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=focusdeck.db",
    "PostgreSQL": "Host=localhost;Port=5432;Database=focusdeck;Username=postgres;Password=yourpassword",
    "HangfireConnection": "Host=localhost;Port=5432;Database=focusdeck_jobs;Username=postgres;Password=yourpassword"
  },
  "Storage": {
    "Root": "/data/assets"
  }
}
