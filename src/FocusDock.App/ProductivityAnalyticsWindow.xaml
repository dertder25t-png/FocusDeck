<Window x:Class="FocusDock.App.ProductivityAnalyticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Productivity Analytics" Width="1000" Height="700"
        Background="#1E1E1E" Foreground="#CCCCCC"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Background="#1E1E1E" Margin="0">
        <DockPanel LastChildFill="True">
            <!-- Header -->
            <Border DockPanel.Dock="Top" Background="#007ACC" Padding="16" Margin="0">
                <StackPanel>
                    <TextBlock Text="📊 Productivity Analytics" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,8"/>
                    <TextBlock x:Name="TxtDateRange" FontSize="12" Foreground="#E0E0E0"/>
                </StackPanel>
            </Border>

            <!-- Top Stats -->
            <Border DockPanel.Dock="Top" Background="#252526" Padding="16" BorderBrush="#3E3E42" BorderThickness="0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Total Study Time" FontSize="12" Foreground="#999999" Margin="0,0,0,4"/>
                        <TextBlock x:Name="TxtTotalTime" Text="0h" FontSize="20" FontWeight="Bold" Foreground="#4EC9B0"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Avg Daily Hours" FontSize="12" Foreground="#999999" Margin="0,0,0,4"/>
                        <TextBlock x:Name="TxtAvgDaily" Text="0.0h" FontSize="20" FontWeight="Bold" Foreground="#4EC9B0"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Avg Effectiveness" FontSize="12" Foreground="#999999" Margin="0,0,0,4"/>
                        <TextBlock x:Name="TxtAvgEffectiveness" Text="0.0/5" FontSize="20" FontWeight="Bold" Foreground="#CE9178"/>
                    </StackPanel>
                    <StackPanel Grid.Column="3">
                        <TextBlock Text="Most Studied Subject" FontSize="12" Foreground="#999999" Margin="0,0,0,4"/>
                        <TextBlock x:Name="TxtTopSubject" Text="—" FontSize="20" FontWeight="Bold" Foreground="#9CDCFE"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto" Background="#1E1E1E">
                <StackPanel Margin="16">
                    <!-- Daily Study Pattern -->
                    <Border Background="#252526" Padding="16" Margin="0,0,0,16" CornerRadius="4" BorderBrush="#3E3E42" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="📈 Daily Study Pattern (Last 30 Days)" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,0,0,12"/>
                            <TextBlock x:Name="TxtDailyBreakdown" FontSize="11" Foreground="#CCCCCC" TextWrapping="Wrap" Margin="0"/>
                        </StackPanel>
                    </Border>

                    <!-- Subject Breakdown -->
                    <Border Background="#252526" Padding="16" Margin="0,0,0,16" CornerRadius="4" BorderBrush="#3E3E42" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="📚 Subject Breakdown" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,0,0,12"/>
                            <ListBox x:Name="LstSubjects" Background="#1E1E1E" BorderThickness="0" Foreground="#CCCCCC" MaxHeight="200"/>
                        </StackPanel>
                    </Border>

                    <!-- Effectiveness Trend -->
                    <Border Background="#252526" Padding="16" Margin="0,0,0,16" CornerRadius="4" BorderBrush="#3E3E42" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="⭐ Effectiveness Trend" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,0,0,12"/>
                            <TextBlock x:Name="TxtEffectivenessTrend" FontSize="11" Foreground="#CCCCCC" TextWrapping="Wrap" Margin="0"/>
                        </StackPanel>
                    </Border>

                    <!-- Session Statistics -->
                    <Border Background="#252526" Padding="16" CornerRadius="4" BorderBrush="#3E3E42" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="📊 Session Statistics" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,0,0,12"/>
                            <TextBlock x:Name="TxtSessionStats" FontSize="11" Foreground="#CCCCCC" TextWrapping="Wrap" Margin="0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border DockPanel.Dock="Bottom" Background="#252526" Padding="16" BorderBrush="#3E3E42" BorderThickness="0,1">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="BtnClose" Content="Close" Padding="12,8" Background="#3E3E42" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Border>
        </DockPanel>
    </Grid>
</Window>
