<Window x:Class="FocusDock.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:FocusDock.App"
        xmlns:conv="clr-namespace:FocusDock.App.Converters"
        mc:Ignorable="d"
        Title="FocusDock - Modern Workspace Manager"
        Height="80" Width="1400"
        MinHeight="80"
        WindowStartupLocation="Manual"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="True"
        Opacity="1.0">
    
    <!--
        ╔═══════════════════════════════════════════════════════════╗
        ║  FOCUSDOCK - PREMIUM UI PHASE 2 (October 2025)          ║
        ║  Glassmorphism design with side rail navigation          ║
        ╚═══════════════════════════════════════════════════════════╝
    -->

    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:WindowIconConverter x:Key="WindowIconConverter"/>

        <!-- Window-specific styles extending ModernStyles.xaml -->
        <!-- Fallback ItemsPanel templates (used by legacy code / safety) -->
        <ItemsPanelTemplate x:Key="HorizontalItemsPanel">
            <StackPanel Orientation="Horizontal"/>
        </ItemsPanelTemplate>
        <ItemsPanelTemplate x:Key="VerticalItemsPanel">
            <StackPanel Orientation="Vertical"/>
        </ItemsPanelTemplate>
        
        <!-- Frosted Dock Container with better contrast -->
        <Style x:Key="DockContainer" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource GlassPanelGradient}"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#40FFFFFF" Offset="0"/>
                        <GradientStop Color="#20FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="32" ShadowDepth="0" Opacity="0.5" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Window Item Button -->
        <Style x:Key="WindowItemButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="chip" 
                                Style="{StaticResource Chip}" 
                                Margin="4,0" 
                                Padding="8">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <StackPanel Orientation="Horizontal">
                                <!-- App Icon - Using Segoe MDL2 Assets -->
                                <TextBlock FontFamily="Segoe MDL2 Assets" 
                                           Text="&#xE8FD;" 
                                           FontSize="22"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                                
                                <!-- Window Title -->
                                <TextBlock Text="{Binding Title}" 
                                           MaxWidth="180"
                                           TextTrimming="CharacterEllipsis"
                                           Visibility="Collapsed">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource LabelTextStyle}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.IconOnlyMode, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover Animation -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="chip" Property="Background" Value="{StaticResource GlassLightHoverBrush}"/>
                                <Setter TargetName="chip" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="chip" Property="BorderThickness" Value="1.5"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="chip" 
                                                           Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                           To="1.08" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="chip" 
                                                           Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                           To="1.08" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="chip" 
                                                           Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                           To="1" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="chip" 
                                                           Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                           To="1" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            
                            <!-- Press Animation -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="chip" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="chip" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            
                            <!-- Pinned State -->
                            <DataTrigger Binding="{Binding IsPinned}" Value="True">
                                <Setter TargetName="chip" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="chip" Property="BorderThickness" Value="2"/>
                            </DataTrigger>
                            
                            <!-- Icon-only compact mode -->
                            <DataTrigger Binding="{Binding DataContext.IconOnlyMode, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                <Setter Property="Padding" TargetName="chip" Value="8"/>
                                <Setter Property="Margin" TargetName="chip" Value="3,0"/>
                                <Setter Property="Width" TargetName="chip" Value="42"/>
                                <Setter Property="Height" TargetName="chip" Value="42"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Feature Button (with icon and label) - Now using PillButton -->
        <Style x:Key="FeatureButton" TargetType="Button" BasedOn="{StaticResource PillButton}">
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Background" Value="{StaticResource GlassLightBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="40"/>
        </Style>
        
        <!-- Quick Action Icon Button - Using IconPillButton -->
        <Style x:Key="QuickActionButton" TargetType="Button" BasedOn="{StaticResource IconPillButton}">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>

        <!-- Premium Glassmorphism ContextMenu Style -->
        <Style x:Key="PremiumContextMenu" TargetType="ContextMenu">
            <Setter Property="Background" Value="{StaticResource GlassPanelGradient}"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#30FFFFFF" Offset="0"/>
                        <GradientStop Color="#15FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="HasDropShadow" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="32" ShadowDepth="0" Opacity="0.6" Color="Black"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}"
                                Effect="{TemplateBinding Effect}">
                            <ScrollViewer CanContentScroll="True" 
                                          Style="{DynamicResource {ComponentResourceKey ResourceId=MenuScrollViewer, TypeInTargetAssembly={x:Type FrameworkElement}}}">
                                <ItemsPresenter Margin="0"/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Premium Glassmorphism MenuItem Style -->
        <Style x:Key="PremiumMenuItem" TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontFamily" Value="{StaticResource FontFamilyText}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="8"
                                Margin="2,1"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter ContentSource="Header"
                                              VerticalAlignment="Center"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1AFFFFFF"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextOnAccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource TextDisabledBrush}"/>
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Compact Icon-Only Action Button (no expand on hover) -->
        <Style x:Key="CompactIconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="42"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover State -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#20FFFFFF"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                             Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                             To="1.08"
                                                             Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                             Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                             To="1.08"
                                                             Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                             Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                             To="1"
                                                             Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                             Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                             To="1"
                                                             Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <!-- Pressed State -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextOnAccentBrush}"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                             Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                             To="0.95"
                                                             Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                             Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                             To="0.95"
                                                             Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- MAIN DOCK LAYOUT -->
    <Grid Margin="8,8,8,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Accent indicator strip (always visible at top edge) -->
        <Border Grid.Row="0" 
                Height="3" 
                CornerRadius="2,2,0,0" 
                Background="{StaticResource AccentGradient}" 
                Opacity="0.9"
                Margin="0,0,0,2"/>

        <!-- Main Dock Container -->
        <Border Grid.Row="1" Style="{StaticResource DockContainer}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- ═══════════════ LEFT SECTION ═══════════════ -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center" 
                            Margin="8,0,16,0">
                    
                    <!-- Menu Button (opens showcase) -->
                    <Button x:Name="BtnMenu" 
                            Style="{StaticResource CompactIconButton}" 
                            Content="&#xE700;"
                            Margin="0,0,4,0"
                            ToolTip="Premium UI Showcase">
                    </Button>
                    
                    <!-- Vertical Separator -->
                    <Border Width="1" 
                            Height="40"
                            Background="{StaticResource GlassStrokeBrush}" 
                            Margin="8,0"/>
                </StackPanel>

                <!-- ═══════════════ CENTER SECTION (Groups & Windows) ═══════════════ -->
                <ScrollViewer Grid.Column="1" 
                              VerticalScrollBarVisibility="Disabled" 
                              HorizontalScrollBarVisibility="Hidden"
                              CanContentScroll="True">
                    <ItemsControl x:Name="GroupsList" 
                                  ItemsSource="{Binding WindowGroups}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" 
                                            Margin="6,0" 
                                            VerticalAlignment="Center">
                                    
                                    <!-- Group Name Badge -->
                                    <Border Style="{StaticResource Chip}" 
                                            Margin="0,0,12,0" 
                                            Padding="12,7"
                                            Background="{StaticResource DarkBg4Brush}">
                                        <TextBlock Text="{Binding GroupName}" 
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource AccentBrush}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource CaptionTextStyle}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IconOnlyMode, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>

                                    <!-- Windows in this group -->
                                    <ItemsControl ItemsSource="{Binding Windows}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Style="{StaticResource WindowItemButton}" 
                                                        Click="OnWindowItemActivate" 
                                                        MouseRightButtonUp="OnWindowItemRightClick" 
                                                        ToolTip="{Binding Title}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    
                                    <!-- Group Separator -->
                                    <Border Width="1" 
                                            Height="30" 
                                            Background="{StaticResource GlassStrokeBrush}" 
                                            Margin="12,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- ═══════════════ RIGHT SECTION (All Actions) ═══════════════ -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center" 
                            Margin="16,0,8,0">
                    
                    <!-- Focus Mode Toggle -->
                    <Button x:Name="BtnFocus" 
                            Style="{StaticResource CompactIconButton}" 
                            Content="&#xE7B5;"
                            ToolTip="Focus Mode"
                            Margin="0,0,4,0">
                    </Button>
                    
                    <!-- Layouts Manager -->
                    <Button x:Name="BtnLayouts" 
                            Style="{StaticResource CompactIconButton}"
                            Content="&#xE80A;"
                            ToolTip="Window Layouts"
                            Margin="0,0,4,0">
                    </Button>
                    
                    <!-- Separator -->
                    <Border Width="1" 
                            Height="30" 
                            Background="{StaticResource StrokeSecondaryBrush}" 
                            Margin="6,0,8,0"/>
                    
                    <!-- Calendar & Assignments -->
                    <Button x:Name="BtnCalendar" 
                            Style="{StaticResource CompactIconButton}" 
                            Content="&#xE787;"
                            ToolTip="Calendar &amp; Assignments" 
                            Margin="0,0,4,0">
                    </Button>
                    
                    <!-- To-Do / Reminders -->
                    <Button x:Name="BtnReminders" 
                            Style="{StaticResource CompactIconButton}"
                            Content="&#xE73A;"
                            ToolTip="Tasks &amp; Reminders"
                            Margin="0,0,4,0">
                    </Button>
                    
                    <!-- Study Timer -->
                    <Button x:Name="BtnStudySession" 
                            Style="{StaticResource CompactIconButton}"
                            Content="&#xE8F1;"
                            ToolTip="Study Timer"
                            Margin="0,0,4,0">
                    </Button>
                    
                    <!-- Separator -->
                    <Border Width="1" 
                            Height="30" 
                            Background="{StaticResource StrokeSecondaryBrush}" 
                            Margin="6,0,8,0"/>
                    
                    <!-- Workspace Manager -->
                    <Button x:Name="BtnWorkspace" 
                            Style="{StaticResource CompactIconButton}"
                            Content="&#xE7EF;"
                            ToolTip="Workspace Manager"
                            Margin="0,0,4,0">
                    </Button>
                    
                    <!-- Dock Settings -->
                    <Button x:Name="BtnDock" 
                            Style="{StaticResource CompactIconButton}"
                            Content="&#xEC7A;"
                            ToolTip="Dock Settings"
                            Margin="0,0,4,0">
                    </Button>
                    
                    <!-- Automations -->
                    <Button x:Name="BtnAutomations" 
                            Style="{StaticResource CompactIconButton}"
                            Content="&#xE945;"
                            ToolTip="Automations"
                            Margin="0,0,4,0">
                    </Button>
                    
                    <!-- Settings -->
                    <Button x:Name="BtnSettings" 
                            Style="{StaticResource CompactIconButton}"
                            Content="&#xE713;"
                            ToolTip="Settings"
                            Margin="0,0,4,0">
                    </Button>
                    
                    <!-- Separator -->
                    <Border Width="1" 
                            Height="30" 
                            Background="{StaticResource StrokeSecondaryBrush}" 
                            Margin="6,0,8,0"/>
                    
                    <!-- Clock -->
                    <Border Style="{StaticResource GlassCard}" 
                            Padding="14,8"
                            MinWidth="90"
                            Height="42"
                            Background="{StaticResource GlassLightBrush}">
                        <TextBlock x:Name="TxtClock" 
                                   Style="{StaticResource BodyStrongTextStyle}" 
                                   Text="--:--"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   FontFamily="Segoe UI"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <!-- ═══════════════ AUTOMATION BANNER (Floating) ═══════════════ -->
                <Border x:Name="AutomationBanner" 
                        Grid.ColumnSpan="3" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Top" 
                        Margin="0,-50,0,0" 
                        Padding="16,10" 
                        Background="{StaticResource CardGradient}" 
                        CornerRadius="14" 
                        Visibility="Collapsed" 
                        BorderBrush="{StaticResource AccentBrush}" 
                        BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.4" Color="#7C5CFF"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
                                   Text="" 
                                   FontSize="16"
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,0,12,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="TxtAutomationMessage" 
                                   Style="{StaticResource BodyTextStyle}"
                                   Margin="0,0,12,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="TxtAutomationCountdown" 
                                   Style="{StaticResource CaptionTextStyle}"
                                   Margin="0,0,16,0"
                                   VerticalAlignment="Center"/>
                        <Button x:Name="BtnAutomationUndo" 
                                Style="{StaticResource SecondaryButton}"
                                Padding="12,6">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
                                           Text="" 
                                           Margin="0,0,6,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Undo" 
                                           Style="{StaticResource LabelTextStyle}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
                <!-- Hidden placeholders to satisfy legacy code-behind references -->
                <StackPanel x:Name="PanelLeft" Visibility="Collapsed"/>
                <StackPanel x:Name="PanelRight" Visibility="Collapsed"/>
                <TextBlock x:Name="TxtRemindersCount" Visibility="Collapsed" Text="0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
