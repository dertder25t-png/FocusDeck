<Window x:Class="FocusDock.App.Controls.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Name" Height="140" Width="360"
        WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <TextBlock x:Name="LblPrompt" Text="Enter name:" Margin="0,0,0,6"/>
    <TextBox x:Name="TxtInput" Grid.Row="1" MinWidth="280"/>
    <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,0,0">
      <Button Content="OK" Width="80" Margin="0,0,6,0" IsDefault="True" Click="OnOk"/>
      <Button Content="Cancel" Width="80" IsCancel="True"/>
    </StackPanel>
  </Grid>
</Window>

