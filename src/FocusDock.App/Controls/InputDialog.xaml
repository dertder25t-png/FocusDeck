<Window x:Class="FocusDock.App.Controls.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bookmark"
        Width="420"
        SizeToContent="Height"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
  <Window.Resources>
    <SolidColorBrush x:Key="DialogBackground" Color="#1C1D1F"/>
    <SolidColorBrush x:Key="DialogBorder" Color="#2A2D33"/>
    <SolidColorBrush x:Key="DialogAccent" Color="#7B5FFF"/>
    <SolidColorBrush x:Key="DialogText" Color="#E8EAED"/>
    <SolidColorBrush x:Key="DialogSubtle" Color="#9AA2B4"/>

    <Style TargetType="TextBox">
      <Setter Property="Foreground" Value="{StaticResource DialogText}"/>
      <Setter Property="Background" Value="#23252A"/>
      <Setter Property="BorderBrush" Value="{StaticResource DialogBorder}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="14,10"/>
      <Setter Property="FontSize" Value="15"/>
      <Setter Property="CaretBrush" Value="{StaticResource DialogAccent}"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="TextBox">
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="8">
              <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

    <Style x:Key="DialogGhostButton" TargetType="Button">
      <Setter Property="Foreground" Value="{StaticResource DialogText}"/>
      <Setter Property="Background" Value="#23252A"/>
      <Setter Property="BorderBrush" Value="{StaticResource DialogBorder}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="16,8"/>
      <Setter Property="MinWidth" Value="96"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="10">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="BorderBrush" Value="{StaticResource DialogAccent}"/>
        </Trigger>
      </Style.Triggers>
    </Style>

    <Style x:Key="DialogAccentButton" TargetType="Button" BasedOn="{StaticResource DialogGhostButton}">
      <Setter Property="Background" Value="{StaticResource DialogAccent}"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="BorderThickness" Value="0"/>
    </Style>
  </Window.Resources>

  <Border CornerRadius="16"
          Background="{StaticResource DialogBackground}"
          BorderBrush="{StaticResource DialogBorder}"
          BorderThickness="1"
          Padding="28">
    <Border.Effect>
      <DropShadowEffect BlurRadius="20"
                        ShadowDepth="0"
                        Color="#CC000000"
                        Opacity="0.4"/>
    </Border.Effect>
    <StackPanel>
      <TextBlock Text="Add Bookmark"
                 FontSize="18"
                 FontWeight="SemiBold"
                 Foreground="{StaticResource DialogText}"/>
      <TextBlock x:Name="LblPrompt"
                 Text="Enter name:"
                 Margin="0,6,0,18"
                 Foreground="{StaticResource DialogSubtle}"/>

      <TextBox x:Name="TxtInput"
               MinWidth="300"
               Margin="0,0,0,18"/>

      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
  <Button Content="Cancel"
                Style="{StaticResource DialogGhostButton}"
    IsCancel="True"
    Margin="0,0,12,0"/>
        <Button Content="Add Bookmark"
                Style="{StaticResource DialogAccentButton}"
                IsDefault="True"
                Click="OnOk"/>
      </StackPanel>
    </StackPanel>
  </Border>
</Window>

