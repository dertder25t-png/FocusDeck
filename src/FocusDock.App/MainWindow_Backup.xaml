<Window x:Class="FocusDock.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:FocusDock.App"
        xmlns:conv="clr-namespace:FocusDock.App.Converters"
        mc:Ignorable="d"
        Title="FocusDock"
        Height="56" Width="1320"
        MinHeight="14"
        WindowStartupLocation="Manual"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="True">
    <!--
        FocusDock – 2025 refresh
        Key ideas:
        • Frosted glass pill with subtle gradient + inner stroke (Fluent-like)
        • Icon-first chips with optional labels that collapse at small widths
        • One accent color, reduced borders, soft shadow
        • Consistent 8px grid, 12/14 radius, 14px type scale
        • Badges, hover/press animations, and overflow scrolling
    -->

    <Window.Resources>
    <!-- Converters -->
    <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    <conv:WindowIconConverter x:Key="WindowIconConverter"/>

    <!-- THEME: swap Light/Dark in one place -->
        <SolidColorBrush x:Key="AccentBrush" Color="#7C5CFF"/>  <!-- violet accent -->
        <SolidColorBrush x:Key="TextPrimary" Color="#F5F7FA"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#C9CFDA"/>
        <SolidColorBrush x:Key="ChipBg" Color="#0FFFFFFF"/>      <!-- 6% white -->
        <SolidColorBrush x:Key="ChipBgHover" Color="#14FFFFFF"/>
        <SolidColorBrush x:Key="ChipStroke" Color="#20FFFFFF"/>
        <SolidColorBrush x:Key="ContainerStroke" Color="#26FFFFFF"/>
        <SolidColorBrush x:Key="Danger" Color="#FF5C5C"/>

        <!-- Typography -->
        <Style TargetType="TextBlock" x:Key="Caption">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="Label">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <!-- FROSTED CONTAINER (outer dock) -->
        <Style TargetType="Border" x:Key="FrostedSurface">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#B31D1D1F" Offset="0"/>  <!-- smoky top -->
                        <GradientStop Color="#B30F1014" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.35" Color="#000000"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="{StaticResource ContainerStroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- CHIPS for groups/items -->
        <Style TargetType="Border" x:Key="Chip">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="{StaticResource ChipBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ChipStroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>

        <!-- ICON BUTTON (MDL2/Fluent glyphs) -->
        <Style TargetType="Button" x:Key="IconButton">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root" CornerRadius="10"
                                Background="{TemplateBinding Background}" BorderBrush="{StaticResource ChipStroke}" BorderThickness="0.5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="{StaticResource ChipBgHover}"/>
                                <Setter Property="BorderThickness" TargetName="root" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- WINDOW ITEM (icon + optional text) -->
        <Style TargetType="Button" x:Key="WindowItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="chip" Style="{StaticResource Chip}" Margin="4,0" Padding="8,6">
                            <Border.LayoutTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.LayoutTransform>
                            <StackPanel x:Name="sp" Orientation="Horizontal">
                                <Image Width="18" Height="18" Source="{Binding Converter={StaticResource WindowIconConverter}, TargetNullValue={x:Null}}" Margin="0,0,8,0">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Style.Triggers>
                                                <Trigger Property="Source" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                                <!-- Title hides when IconOnlyMode true -->
                                <TextBlock Text="{Binding Title}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource Label}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.IconOnlyMode, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="chip" Property="Background" Value="{StaticResource ChipBgHover}"/>
                                <Setter TargetName="chip" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="chip" Property="BorderThickness" Value="1"/>
                                <Setter Property="LayoutTransform" TargetName="chip">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.12" ScaleY="1.12"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="chip" Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding IsPinned}" Value="True">
                                <Setter TargetName="chip" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="chip" Property="BorderThickness" Value="1.5"/>
                            </DataTrigger>
                            <!-- Icon-only compact mode sizing -->
                            <DataTrigger Binding="{Binding DataContext.IconOnlyMode, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                <Setter Property="Padding" TargetName="chip" Value="6,6"/>
                                <Setter Property="Margin" TargetName="chip" Value="3,0"/>
                                <Setter Property="Width" TargetName="chip" Value="38"/>
                                <Setter Property="Height" TargetName="chip" Value="38"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Panels -->
        <ItemsPanelTemplate x:Key="HorizontalItemsPanel">
            <StackPanel Orientation="Horizontal"/>
        </ItemsPanelTemplate>
        <ItemsPanelTemplate x:Key="VerticalItemsPanel">
            <StackPanel Orientation="Vertical"/>
        </ItemsPanelTemplate>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Accent sliver for easy discovery at the screen edge -->
        <Border Grid.Row="0" Height="3" CornerRadius="2" Background="{StaticResource AccentBrush}" Opacity="0.9"/>

        <Border Grid.Row="1" Style="{StaticResource FrostedSurface}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT: primary toggles -->
                <StackPanel x:Name="PanelLeft" Orientation="Horizontal" VerticalAlignment="Center" Margin="6,0">
                    <Button x:Name="BtnFocus" Style="{StaticResource IconButton}" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,8,0"/>
                            <TextBlock Text="Focus" Style="{StaticResource Label}"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnLayouts" Style="{StaticResource IconButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,8,0"/>
                            <TextBlock Text="Layouts" Style="{StaticResource Label}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- CENTER: Groups/Windows -->
                <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="GroupsList" ItemsSource="{Binding WindowGroups}" ItemsPanel="{StaticResource HorizontalItemsPanel}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="4,0" VerticalAlignment="Center">
                                    <!-- Group chip -->
                                    <Border Style="{StaticResource Chip}" Margin="0,0,8,0" Padding="10,6">
                                        <TextBlock Text="{Binding GroupName}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource Caption}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IconOnlyMode, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>

                                    <!-- Windows in group -->
                                    <ItemsControl ItemsSource="{Binding Windows}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Style="{StaticResource WindowItem}" Click="OnWindowItemActivate" MouseRightButtonUp="OnWindowItemRightClick" ToolTip="{Binding Title}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- RIGHT: utility actions + clock -->
                <StackPanel x:Name="PanelRight" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="6,0">
                    <Button x:Name="BtnCalendar" Style="{StaticResource IconButton}" ToolTip="Calendar &amp; Assignments" Margin="0,0,6,0">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text=""/>
                    </Button>
                    <Button x:Name="BtnReminders" Style="{StaticResource IconButton}" ToolTip="To‑Do List">
                        <Grid>
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text=""/>
                            <!-- Badge -->
                            <Border Background="{StaticResource Danger}" CornerRadius="8" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-3,-3,0" Padding="4,1">
                                <TextBlock x:Name="TxtRemindersCount" Text="0" FontSize="10" Foreground="White"/>
                            </Border>
                        </Grid>
                    </Button>
                    <Button x:Name="BtnStudySession" Style="{StaticResource IconButton}" ToolTip="Study Timer">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text=""/>
                    </Button>
                    <Button x:Name="BtnWorkspace" Style="{StaticResource IconButton}">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text=""/>
                    </Button>
                    <Button x:Name="BtnDock" Style="{StaticResource IconButton}">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text=""/>
                    </Button>
                    <Button x:Name="BtnAutomations" Style="{StaticResource IconButton}">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text=""/>
                    </Button>
                    <Button x:Name="BtnSettings" Style="{StaticResource IconButton}" ToolTip="Settings">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text=""/>
                    </Button>
                    <Border Style="{StaticResource Chip}" Padding="10,6">
                        <TextBlock x:Name="TxtClock" Style="{StaticResource Label}" Text="--:--"/>
                    </Border>
                </StackPanel>

                <!-- Automation banner -->
                <Border x:Name="AutomationBanner" Grid.ColumnSpan="3" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8" Padding="10,6" Background="#B30C0C0F" CornerRadius="12" Visibility="Collapsed" BorderBrush="{StaticResource ContainerStroke}" BorderThickness="1">
                    <StackPanel Orientation="Horizontal"  VerticalAlignment="Center">
                        <TextBlock x:Name="TxtAutomationMessage" Style="{StaticResource Label}"/>
                        <TextBlock x:Name="TxtAutomationCountdown" Style="{StaticResource Caption}"/>
                        <Button x:Name="BtnAutomationUndo" Style="{StaticResource IconButton}">
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text=""/>
                                <TextBlock Text="Undo" Style="{StaticResource Label}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
