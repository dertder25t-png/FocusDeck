<Window x:Class="FocusDock.App.StudySessionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Study Timer" 
        Width="480" 
        Height="640"
        Style="{StaticResource ModernWindow}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <!-- Timer Display Style -->
        <Style x:Key="TimerText" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas, Cascadia Code, Segoe UI Variable Display"/>
            <Setter Property="FontSize" Value="72"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        
        <!-- Stat Card -->
        <Style x:Key="StatCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="Padding" Value="20"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
    </Window.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,32">
            <TextBlock Text="Study Timer" Style="{StaticResource TitleLargeTextStyle}"/>
            <TextBlock x:Name="TxtSessionType" 
                       Text="Focus Session" 
                       Style="{StaticResource SubtitleTextStyle}"
                       Foreground="{StaticResource AccentBrush}"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Timer Display -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
            
            <!-- Circular Progress Indicator -->
            <Grid Width="320" Height="320" Margin="0,0,0,40">
                <!-- Background Ring -->
                <Ellipse Stroke="{StaticResource DarkBg4Brush}" 
                         StrokeThickness="20"/>
                
                <!-- Progress Ring -->
                <Ellipse x:Name="ProgressRing"
                         Stroke="{StaticResource AccentBrush}" 
                         StrokeThickness="20"
                         StrokeDashArray="1000"
                         StrokeDashOffset="0"
                         RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <RotateTransform Angle="-90"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
                
                <!-- Timer Text -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock x:Name="TxtTimer" 
                               Text="25:00" 
                               Style="{StaticResource TimerText}"/>
                    <TextBlock x:Name="TxtTimerLabel" 
                               Text="minutes remaining" 
                               Style="{StaticResource CaptionTextStyle}"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Control Buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,32">
                <Button x:Name="BtnStartPause" 
                        Style="{StaticResource PrimaryButton}"
                        Padding="32,14"
                        Margin="0,0,16,0"
                        Click="OnStartPauseClick">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
                                   Text="" 
                                   FontSize="20"
                                   Margin="0,0,10,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="TxtStartPauseLabel" 
                                   Text="Start" 
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="BtnReset" 
                        Style="{StaticResource SecondaryButton}"
                        Padding="24,14"
                        Click="OnResetClick">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
                                   Text="" 
                                   FontSize="18"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Reset" 
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Session Stats -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Sessions Today -->
                <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="Sessions Today" 
                                   Style="{StaticResource CaptionTextStyle}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TxtSessionsToday" 
                                   Text="0" 
                                   Style="{StaticResource TitleTextStyle}"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Time Today -->
                <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="4,0">
                    <StackPanel>
                        <TextBlock Text="Time Today" 
                                   Style="{StaticResource CaptionTextStyle}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TxtTimeToday" 
                                   Text="0m" 
                                   Style="{StaticResource TitleTextStyle}"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Current Streak -->
                <Border Grid.Column="2" Style="{StaticResource StatCard}" Margin="8,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Streak" 
                                   Style="{StaticResource CaptionTextStyle}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TxtStreak" 
                                   Text="0 days" 
                                   Style="{StaticResource TitleTextStyle}"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>

        <!-- Quick Settings Footer -->
        <Border Grid.Row="2" 
                BorderBrush="{StaticResource GlassStrokeBrush}" 
                BorderThickness="0,1,0,0" 
                Padding="0,20,0,0"
                Margin="0,32,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Duration Selector -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Duration:" 
                               Style="{StaticResource LabelTextStyle}"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    <ComboBox x:Name="CmbDuration"
                              Style="{StaticResource ModernComboBox}"
                              Width="120"
                              SelectedIndex="0"
                              SelectionChanged="OnDurationChanged">
                        <ComboBoxItem Content="25 min"/>
                        <ComboBoxItem Content="45 min"/>
                        <ComboBoxItem Content="60 min"/>
                        <ComboBoxItem Content="90 min"/>
                    </ComboBox>
                </StackPanel>
                
                <!-- Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Style="{StaticResource IconButton}"
                            ToolTip="View Session History"
                            Margin="0,0,8,0"
                            Click="OnHistoryClick">
                        <TextBlock FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
                                   Text="" 
                                   FontSize="18"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}"
                            ToolTip="Timer Settings"
                            Click="OnSettingsClick">
                        <TextBlock FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
                                   Text="" 
                                   FontSize="18"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
