<Application x:Class="FocusDock.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <!-- Premium UI Resources - Glassmorphism Design System -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Foundation: Design tokens (colors, typography, spacing, shadows) -->
                <ResourceDictionary Source="Styles/DesignSystem.xaml"/>
                <!-- Base: Modern component styles -->
                <ResourceDictionary Source="Styles/ModernStyles.xaml"/>
                <!-- Premium: Animated button templates -->
                <ResourceDictionary Source="Styles/PremiumButtons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>

