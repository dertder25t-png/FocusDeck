<Window x:Class="FocusDock.App.StudySessionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Study Session" Width="500" Height="600"
        Background="#1E1E1E" Foreground="#CCCCCC"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True">
    <Grid Background="#1E1E1E">
        <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <!-- Header -->
            <Border Background="#007ACC" Padding="20" Margin="0">
                <StackPanel>
                    <TextBlock Text="📚 Study Session" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,8" />
                    <TextBlock x:Name="TxtSubject" FontSize="14" Foreground="#E0E0E0" TextWrapping="Wrap" />
                </StackPanel>
            </Border>

            <!-- Timer Display -->
            <Border Background="#252526" Margin="20" Padding="30" CornerRadius="12" BorderBrush="#3E3E42" BorderThickness="2">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="TxtElapsedTime" Text="00:00:00" FontSize="72" FontWeight="Bold" 
                               Foreground="#4EC9B0" HorizontalAlignment="Center" FontFamily="Courier New" />
                    <TextBlock x:Name="TxtSessionStatus" Text="Active" FontSize="14" Foreground="#888" 
                               HorizontalAlignment="Center" Margin="0,10,0,0" />
                </StackPanel>
            </Border>

            <!-- Progress Bar -->
            <Border Margin="20,0,20,20" Padding="0">
                <StackPanel>
                    <TextBlock Text="Session Progress" FontSize="12" Foreground="#888" Margin="0,0,0,8" />
                    <ProgressBar x:Name="ProgressSession" Height="12" Background="#3E3E42" Foreground="#4EC9B0" 
                                 Value="0" Maximum="100" />
                    <TextBlock x:Name="TxtProgressLabel" Text="0 / 60 minutes" FontSize="11" Foreground="#666" 
                               Margin="0,6,0,0" HorizontalAlignment="Right" />
                </StackPanel>
            </Border>

            <!-- Current Task / Subject Info -->
            <Border Background="#2D2D30" Margin="20,0,20,20" Padding="15" CornerRadius="8" BorderBrush="#3E3E42" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="📝 Current Task" FontSize="12" FontWeight="Bold" Foreground="#888" Margin="0,0,0,8" />
                    <TextBlock x:Name="TxtCurrentTask" Text="No task selected" FontSize="13" Foreground="#CCCCCC" TextWrapping="Wrap" />
                </StackPanel>
            </Border>

            <!-- Break Indicator -->
            <Border x:Name="BreakBanner" Background="#D4A574" Margin="20,0,20,20" Padding="15" CornerRadius="8" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="☕ Take a Break!" FontSize="14" FontWeight="Bold" Foreground="#1E1E1E" />
                    <TextBlock Text="You've been studying for a while. Consider a 5-minute break." FontSize="12" 
                               Foreground="#1E1E1E" Margin="0,5,0,0" TextWrapping="Wrap" />
                </StackPanel>
            </Border>

            <!-- Control Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,20">
                <Button x:Name="BtnPlayPause" Content="⏸ Pause" Width="100" Height="45" Padding="10" Margin="5,0"
                        Background="#007ACC" Foreground="White" FontSize="12" FontWeight="Bold"
                        Click="OnPlayPauseClick" />
                <Button x:Name="BtnBreak" Content="☕ Break" Width="100" Height="45" Padding="10" Margin="5,0"
                        Background="#D4A574" Foreground="#1E1E1E" FontSize="12" FontWeight="Bold"
                        Click="OnBreakClick" Visibility="Collapsed" />
                <Button x:Name="BtnEndSession" Content="⏹ Stop" Width="100" Height="45" Padding="10" Margin="5,0"
                        Background="#F48771" Foreground="White" FontSize="12" FontWeight="Bold"
                        Click="OnEndSessionClick" />
            </StackPanel>

            <!-- Stats Footer -->
            <Border Background="#2D2D30" Margin="20,0,20,20" Padding="15" CornerRadius="8" BorderBrush="#3E3E42" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="Focus Rate" FontSize="10" Foreground="#888" HorizontalAlignment="Center" />
                        <TextBlock x:Name="TxtFocusRate" Text="100%" FontSize="16" FontWeight="Bold" Foreground="#4EC9B0" 
                                   HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="Distractions" FontSize="10" Foreground="#888" HorizontalAlignment="Center" />
                        <TextBlock x:Name="TxtDistractions" Text="0" FontSize="16" FontWeight="Bold" Foreground="#F48771" 
                                   HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="Breaks" FontSize="10" Foreground="#888" HorizontalAlignment="Center" />
                        <TextBlock x:Name="TxtBreakCount" Text="0" FontSize="16" FontWeight="Bold" Foreground="#CE9178" 
                                   HorizontalAlignment="Center" Margin="0,4,0,0" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Tips -->
            <TextBlock Text="💡 Tip: Keep this window visible to track your focus" FontSize="11" Foreground="#666"
                       HorizontalAlignment="Center" TextAlignment="Center" Margin="20,0,20,20" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Window>
