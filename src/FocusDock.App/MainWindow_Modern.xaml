<Window x:Class="FocusDock.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:FocusDock.App"
        xmlns:conv="clr-namespace:FocusDock.App.Converters"
        mc:Ignorable="d"
        Title="FocusDock - Modern Workspace Manager"
        Height="60" Width="1400"
        MinHeight="60"
        WindowStartupLocation="Manual"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="True">
    
    <!--
        ╔═══════════════════════════════════════════════════════════╗
        ║  FOCUSDOCK - MODERN UI OVERHAUL (October 2025)          ║
        ║  Premium glass morphism design with smooth animations     ║
        ╚═══════════════════════════════════════════════════════════╝
    -->

    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:WindowIconConverter x:Key="WindowIconConverter"/>

        <!-- Window-specific styles extending ModernStyles.xaml -->
        
        <!-- Frosted Dock Container -->
        <Style x:Key="DockContainer" TargetType="Border" BasedOn="{StaticResource GlassCard}">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CornerRadius" Value="18"/>
        </Style>

        <!-- Window Item Button -->
        <Style x:Key="WindowItemButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="chip" 
                                Style="{StaticResource Chip}" 
                                Margin="4,0" 
                                Padding="10,7">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <StackPanel Orientation="Horizontal">
                                <!-- App Icon -->
                                <Image Width="20" Height="20" 
                                       Source="{Binding Converter={StaticResource WindowIconConverter}, TargetNullValue={x:Null}}" 
                                       Margin="0,0,10,0"
                                       RenderOptions.BitmapScalingMode="HighQuality">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Style.Triggers>
                                                <Trigger Property="Source" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                                
                                <!-- Window Title -->
                                <TextBlock Text="{Binding Title}" 
                                           MaxWidth="180"
                                           TextTrimming="CharacterEllipsis"
                                           Style="{StaticResource LabelTextStyle}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource LabelTextStyle}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.IconOnlyMode, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover Animation -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="chip" Property="Background" Value="{StaticResource GlassLightHoverBrush}"/>
                                <Setter TargetName="chip" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="chip" Property="BorderThickness" Value="1.5"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="chip" 
                                                           Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                           To="1.08" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="chip" 
                                                           Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                           To="1.08" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="chip" 
                                                           Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                           To="1" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="chip" 
                                                           Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                           To="1" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            
                            <!-- Press Animation -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="chip" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="chip" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            
                            <!-- Pinned State -->
                            <DataTrigger Binding="{Binding IsPinned}" Value="True">
                                <Setter TargetName="chip" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="chip" Property="BorderThickness" Value="2"/>
                            </DataTrigger>
                            
                            <!-- Icon-only compact mode -->
                            <DataTrigger Binding="{Binding DataContext.IconOnlyMode, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                <Setter Property="Padding" TargetName="chip" Value="8"/>
                                <Setter Property="Margin" TargetName="chip" Value="3,0"/>
                                <Setter Property="Width" TargetName="chip" Value="42"/>
                                <Setter Property="Height" TargetName="chip" Value="42"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Feature Button (with icon and label) -->
        <Style x:Key="FeatureButton" TargetType="Button" BasedOn="{StaticResource IconButton}">
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>

    </Window.Resources>

    <!-- MAIN DOCK LAYOUT -->
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Accent indicator strip (always visible at top edge) -->
        <Border Grid.Row="0" 
                Height="4" 
                CornerRadius="2,2,0,0" 
                Background="{StaticResource AccentGradient}" 
                Opacity="0.95"
                Margin="0,0,0,2"/>

        <!-- Main Dock Container -->
        <Border Grid.Row="1" Style="{StaticResource DockContainer}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- ═══════════════ LEFT SECTION ═══════════════ -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center" 
                            Margin="8,0,16,0">
                    
                    <!-- Focus Mode Toggle -->
                    <Button x:Name="BtnFocus" 
                            Style="{StaticResource FeatureButton}" 
                            Margin="0,0,8,0"
                            ToolTip="Enable Focus Mode">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
                                       Text="" 
                                       FontSize="16"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Focus" 
                                       Style="{StaticResource LabelTextStyle}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Layouts Manager -->
                    <Button x:Name="BtnLayouts" 
                            Style="{StaticResource FeatureButton}"
                            ToolTip="Manage Window Layouts">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
                                       Text="" 
                                       FontSize="16"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Layouts" 
                                       Style="{StaticResource LabelTextStyle}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Vertical Separator -->
                    <Border Width="1" 
                            Height="30" 
                            Background="{StaticResource GlassStrokeBrush}" 
                            Margin="12,0"/>
                </StackPanel>

                <!-- ═══════════════ CENTER SECTION (Groups & Windows) ═══════════════ -->
                <ScrollViewer Grid.Column="1" 
                              VerticalScrollBarVisibility="Disabled" 
                              HorizontalScrollBarVisibility="Auto"
                              Style="{DynamicResource {x:Type ScrollViewer}}">
                    <ItemsControl x:Name="GroupsList" 
                                  ItemsSource="{Binding WindowGroups}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" 
                                            Margin="6,0" 
                                            VerticalAlignment="Center">
                                    
                                    <!-- Group Name Badge -->
                                    <Border Style="{StaticResource Chip}" 
                                            Margin="0,0,12,0" 
                                            Padding="12,7"
                                            Background="{StaticResource DarkBg4Brush}">
                                        <TextBlock Text="{Binding GroupName}" 
                                                   Style="{StaticResource CaptionTextStyle}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource AccentBrush}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource CaptionTextStyle}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IconOnlyMode, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>

                                    <!-- Windows in this group -->
                                    <ItemsControl ItemsSource="{Binding Windows}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Style="{StaticResource WindowItemButton}" 
                                                        Click="OnWindowItemActivate" 
                                                        MouseRightButtonUp="OnWindowItemRightClick" 
                                                        ToolTip="{Binding Title}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    
                                    <!-- Group Separator -->
                                    <Border Width="1" 
                                            Height="30" 
                                            Background="{StaticResource GlassStrokeBrush}" 
                                            Margin="12,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- ═══════════════ RIGHT SECTION (Utilities) ═══════════════ -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center" 
                            Margin="16,0,8,0">
                    
                    <!-- Calendar & Assignments -->
                    <Button x:Name="BtnCalendar" 
                            Style="{StaticResource IconButton}" 
                            ToolTip="Calendar & Assignments" 
                            Margin="0,0,6,0">
                        <TextBlock FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
                                   Text="" 
                                   FontSize="18"/>
                    </Button>
                    
                    <!-- To-Do / Reminders -->
                    <Button x:Name="BtnReminders" 
                            Style="{StaticResource IconButton}" 
                            ToolTip="To-Do List & Reminders"
                            Margin="0,0,6,0">
                        <Grid>
                            <TextBlock FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
                                       Text="" 
                                       FontSize="18"/>
                            <!-- Notification Badge -->
                            <Border Style="{StaticResource Badge}"
                                    HorizontalAlignment="Right" 
                                    VerticalAlignment="Top" 
                                    Margin="0,-4,-4,0"
                                    Visibility="{Binding RemindersCount, Converter={StaticResource BoolToVis}}">
                                <TextBlock x:Name="TxtRemindersCount" 
                                           Text="0" 
                                           Style="{StaticResource BadgeText}"/>
                            </Border>
                        </Grid>
                    </Button>
                    
                    <!-- Study Timer -->
                    <Button x:Name="BtnStudySession" 
                            Style="{StaticResource IconButton}" 
                            ToolTip="Study Timer & Sessions"
                            Margin="0,0,6,0">
                        <TextBlock FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
                                   Text="" 
                                   FontSize="18"/>
                    </Button>
                    
                    <!-- Separator -->
                    <Border Width="1" 
                            Height="30" 
                            Background="{StaticResource GlassStrokeBrush}" 
                            Margin="6,0,8,0"/>
                    
                    <!-- Workspace Manager -->
                    <Button x:Name="BtnWorkspace" 
                            Style="{StaticResource IconButton}"
                            ToolTip="Workspace Manager"
                            Margin="0,0,6,0">
                        <TextBlock FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
                                   Text="" 
                                   FontSize="18"/>
                    </Button>
                    
                    <!-- Dock Settings -->
                    <Button x:Name="BtnDock" 
                            Style="{StaticResource IconButton}"
                            ToolTip="Dock Configuration"
                            Margin="0,0,6,0">
                        <TextBlock FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
                                   Text="" 
                                   FontSize="18"/>
                    </Button>
                    
                    <!-- Automations -->
                    <Button x:Name="BtnAutomations" 
                            Style="{StaticResource IconButton}"
                            ToolTip="Automations & Rules"
                            Margin="0,0,6,0">
                        <TextBlock FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
                                   Text="" 
                                   FontSize="18"/>
                    </Button>
                    
                    <!-- Settings -->
                    <Button x:Name="BtnSettings" 
                            Style="{StaticResource IconButton}" 
                            ToolTip="Settings"
                            Margin="0,0,12,0">
                        <TextBlock FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
                                   Text="" 
                                   FontSize="18"/>
                    </Button>
                    
                    <!-- Clock -->
                    <Border Style="{StaticResource Chip}" 
                            Padding="14,8"
                            Background="{StaticResource DarkBg4Brush}">
                        <TextBlock x:Name="TxtClock" 
                                   Style="{StaticResource BodyStrongTextStyle}" 
                                   Text="--:--"
                                   FontFamily="Consolas, Cascadia Code"/>
                    </Border>
                </StackPanel>

                <!-- ═══════════════ AUTOMATION BANNER (Floating) ═══════════════ -->
                <Border x:Name="AutomationBanner" 
                        Grid.ColumnSpan="3" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Top" 
                        Margin="0,-50,0,0" 
                        Padding="16,10" 
                        Background="{StaticResource CardGradient}" 
                        CornerRadius="14" 
                        Visibility="Collapsed" 
                        BorderBrush="{StaticResource AccentBrush}" 
                        BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.4" Color="#7C5CFF"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
                                   Text="" 
                                   FontSize="16"
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,0,12,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="TxtAutomationMessage" 
                                   Style="{StaticResource BodyTextStyle}"
                                   Margin="0,0,12,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="TxtAutomationCountdown" 
                                   Style="{StaticResource CaptionTextStyle}"
                                   Margin="0,0,16,0"
                                   VerticalAlignment="Center"/>
                        <Button x:Name="BtnAutomationUndo" 
                                Style="{StaticResource SecondaryButton}"
                                Padding="12,6">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
                                           Text="" 
                                           Margin="0,0,6,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Undo" 
                                           Style="{StaticResource LabelTextStyle}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
