<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Base Spacing Values -->
    <Thickness x:Key="SpacingXSmall">4</Thickness>
    <Thickness x:Key="SpacingSmall">8</Thickness>
    <Thickness x:Key="SpacingMedium">12</Thickness>
    <Thickness x:Key="SpacingBase">16</Thickness>
    <Thickness x:Key="SpacingLarge">20</Thickness>
    <Thickness x:Key="SpacingXLarge">24</Thickness>
    <Thickness x:Key="SpacingXXLarge">32</Thickness>
    
    <!-- Directional Spacing -->
    <Thickness x:Key="SpacingLeftSmall">8,0,0,0</Thickness>
    <Thickness x:Key="SpacingRightSmall">0,0,8,0</Thickness>
    <Thickness x:Key="SpacingTopSmall">0,8,0,0</Thickness>
    <Thickness x:Key="SpacingBottomSmall">0,0,0,8</Thickness>
    
    <Thickness x:Key="SpacingLeftBase">16,0,0,0</Thickness>
    <Thickness x:Key="SpacingRightBase">0,0,16,0</Thickness>
    <Thickness x:Key="SpacingTopBase">0,16,0,0</Thickness>
    <Thickness x:Key="SpacingBottomBase">0,0,0,16</Thickness>
    
    <Thickness x:Key="SpacingHorizontalSmall">8,0,8,0</Thickness>
    <Thickness x:Key="SpacingVerticalSmall">0,8,0,8</Thickness>
    <Thickness x:Key="SpacingHorizontalBase">16,0,16,0</Thickness>
    <Thickness x:Key="SpacingVerticalBase">0,16,0,16</Thickness>
    
    <!-- Border Radius -->
    <CornerRadius x:Key="RadiusSmall">4</CornerRadius>
    <CornerRadius x:Key="RadiusMedium">8</CornerRadius>
    <CornerRadius x:Key="RadiusLarge">12</CornerRadius>
    <CornerRadius x:Key="RadiusXLarge">16</CornerRadius>
    <CornerRadius x:Key="RadiusRound">9999</CornerRadius>
    
    <!-- Border Thickness -->
    <Thickness x:Key="BorderThin">1</Thickness>
    <Thickness x:Key="BorderMedium">2</Thickness>
    <Thickness x:Key="BorderThick">3</Thickness>

</ResourceDictionary>
